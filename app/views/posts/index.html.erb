<% content_for :page_title, "All Your Blurbs" %>


<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4"><%= link_to post.title, post %></p>
            <p class="title is-4"><%= post.user.email %></p>
          </div>
        </div>
        <div class="content">
          <%= post.content %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>
