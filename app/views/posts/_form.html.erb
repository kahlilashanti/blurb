

<div class="section">
  <%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: {class: 'input', placeholder: 'Name of your company'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: {class: 'textarea', placeholder: 'Long version'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: {class: 'textarea', placeholder: 'Medium version'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: {class: 'textarea', placeholder: 'Short version'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
  <% end  %>
</div>
