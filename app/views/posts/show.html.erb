<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left Side -->
      <div class="level-left">
        <p class="level-item">

        </p>
      </div>

      <!-- Right Side -->
      <div class="level-right">
        <p class="level-item">
        <% if post.user == current_user %>
          <%= link_to "Edit", edit_post_path(@post), class: "button is-info" %>
        </p>
         <p class="level-item">
          <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete your blurb?"}, class: "button is-danger" %>
         </p> 
         <% end %>
      </div>
    </nav>
    <hr>
    <div class="content">
      <div class="textarea" id="regcontent">
      <p id="regtext"><%= @post.content %></p>
      </div>
      <div class="level-right">
        <p class="level-item">
          <button class="button is-info" onclick="copyClipboard()">Copy</button>
        </p>
      </div>
      <hr>
      <div class="textarea" id="medcontent">
      <p id="regtextMed"><%= @post.medcontent %></p>
      </div>
      <div class="level-right">
        <p class="level-item">
          <button class="button is-info" onclick="copyMedClipboard()">Copy</button>
        </p>
      </div>
      <hr>
      <div class="textarea" id="shortcontent">
      <p id="regtextSM"><%= @post.shortcontent %></p>
      </div>
      <div class="level-right">
        <p class="level-item">
          <button class="button is-info" onclick="copySMClipboard()">Copy</button>
        </p>
      </div>
    </div>
  </div>
</section>
